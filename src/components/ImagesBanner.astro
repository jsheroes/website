---
import { Image } from 'astro:assets';
import { getImage } from '../utils/getImage';

interface Props {
  images: string[];
}

const { images } = Astro.props;
---

<div class="flex w-full relative overflow-hidden">
  {images.map((imageSrc) => (
    <div class="w-1/3">
    <Image src={getImage(imageSrc)} alt="" densities={[1.5, 2]} loading="eager" class="object-cover" />
    </div>
  ))}
  <div class="absolute inset-0 bg-gradient-to-b from-[#00000000] from-20% to-brand-darknavy"/>
</div>